{
	"port": 4000,
	"livereload": 35730,
	"buildPath": "build/www",
	"contentDir": "contents",
	"dataPath": "build/data.json",
	"sassDir": "sass",
	"templates": {
		"dir": "templates",
		"partialDir": "templates/partials",
		"helperDir": "templates/helpers"
	},
	"paginate": [
		{
			"dir": "posts",
			"postPerPage": 4,
			"template": "archive.hbs",
			"title": "Posts"
		}
	],
	"copy": [
		{"expand": true, "cwd": "<%= sassDir %>", "src": "assets/**/*", "dest": "<%= buildPath %>/css/"}
	]
}