{
  "outDir": "dist",
  "handlebars": {
    "templatesDir": "templates",
    "partialsDir": "templates/partials",
    "helpersDir": "templates/helpers"
  },
  "plugins": {
    "files": {
      "contentsDir": "contents"
    },
    "wordpress": {
      "apiRoot": "https://mywordpress.com/wp-json/wp/v2",
      "contents": [
        {
          "postType": "posts",
          "folder": "articles",
          "template": "article.hbs"
        }
      ]
    },
    "archive": {
      "articles": {
        "postsPerPage": 4,
        "title": "Articles",
        "template": "articles.hbs"
      }
    }
  }
}
